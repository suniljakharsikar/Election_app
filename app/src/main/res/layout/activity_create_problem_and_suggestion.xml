    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_prob_sugg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/stroke_rectangle_shape"
        android:ems="10"
        android:gravity="start"
        android:hint="Write your problem or suggestion here."
        android:inputType="textMultiLine"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_prob_sugg_title" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="150dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_image_btn_prob_sug"
        app:layout_constraintEnd_toEndOf="@+id/tv_image_btn_prob_sug"
        app:layout_constraintStart_toStartOf="@+id/imageView_pic_create_new_prob_sug"
        app:layout_constraintTop_toTopOf="@+id/tv_image_btn_prob_sug"
        app:srcCompat="@drawable/solid_rectangle_shape" />

    <ImageView
        android:id="@+id/imageView_pic_create_new_prob_sug"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_image_btn_prob_sug"
        app:layout_constraintEnd_toStartOf="@+id/tv_image_btn_prob_sug"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/tv_image_btn_prob_sug"
        app:srcCompat="@drawable/imageload" />

    <TextView
        android:id="@+id/tv_image_btn_prob_sug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Add Image"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_imgs_problem" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_bg"
        android:enabled="true"
        android:onClick="submit"
        android:paddingLeft="72dp"
        android:paddingTop="8dp"
        android:paddingRight="72dp"
        android:paddingBottom="8dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tag_img_select"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView_pic_create_prob"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tag_img_select"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_tag_img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_image_btn_prob_sug"
        app:layout_constraintStart_toStartOf="@+id/imageView_pic_create_new_prob_sug"
        app:layout_constraintTop_toBottomOf="@+id/tv_image_btn_prob_sug" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="#000000"
        app:indicatorName="BallClipRotatePulse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_imgs_problem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_prob_sugg" />

</androidx.constraintlayout.widget.ConstraintLayout>